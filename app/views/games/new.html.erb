<h1>New Game</h1>

<div class="container">
  <div class="rand-letters">
    <ul>
      <% @letters.each do |letter| %>
      <li><%= letter %></li>
      <% end %>
    </ul>
  </div>
</div>

<div>

  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input id="token" name="display" type="hidden" value="<%= @letters %>" />
    <input type="text" name="word" class="word-field" placeholder="Enter longest word">
    <input type="submit" class="btn">
  </form>
</div>


